<%- include ("partials/header.ejs") %>

<section id="main-page">
  <div class="container-fluid">
    <div class="nav">
      <h1>CREATE YOUR OWN STORY</h1>
      <ul>
        <a href="/search"
          ><li><i class="fas fa-search"></i> Search</li></a
        >
        <a href="/main"
          ><li><i class="fas fa-home homeicon"></i> Home</li></a
        >
        <a href="/logout"
          ><li><i class="fas fa-sign-out-alt"> </i>Logout</li></a
        >
      </ul>
    </div>
    <div class="form">
      <form action="/create" method="post">
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Username</label>
          <textarea
            required
            class="form-control inputlabel"
            id="exampleFormControlTextarea1"
            rows="1"
            name="username"
            autocomplete="name"
          ></textarea>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Your text</label>
          <textarea
            required
            class="form-control inputbody"
            id="exampleFormControlTextarea1"
            rows="7"
            name="textarea"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary postbtn">Post</button>
      </form>
    </div>
  </div>
</section>
